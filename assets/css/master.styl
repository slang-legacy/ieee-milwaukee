@import 'base'
@import '_ui-elements'
@import '_settings'

// colors
blue = #0072a6
ltblue = #328bde
gray = #ECF0F1
ltgray = #7f7f7f
dark_gray = #555
orange = #f4cd0e
slate = #192d35
white = #F6F8FB

// dims
regular_margin = 10px
regular_font_size = 17px
logo_height = 100px
nav_border_width = regular_margin
footer_height = 130px

// responsive
img, object, embed, audio, video
	max-width:100%

//grid
grid()
	column-width = 60px
	gutter-width = 20px
	columns = 12
	total-width = 100%

body
	position: relative
	background: white
	color dark_gray

body, html
	min-width 200px // yeah - that's as small as we're going
	min-height 100%
	height 100%

strong
	font-weight: 600

header
	group()
	padding 0
	max-width 1200px

	.title 
		font-size 3em

//basic typography
nav, h1, h2, h3, h4, h5, h6
	font-family: 'Yanone Kaffeesatz', sans-serif

p
	font-family 'Didact Gothic', sans-serif
	font-size regular_font_size

// layout 
nav
	position relative
	background blue
	line-height logo_height
	font-size regular_margin * 2

	label
		text-transform uppercase
		color white
		font-weight bold

		a
			padding 5px

#logo, nav
	vertical-align middle

#logo
	logo_padding = (logo_height / 8)
	content_size = logo_height - 2 * logo_padding
	width content_size
	height content_size
	display inline-block
	box-sizing border-box
	margin logo_padding

	background url('../img/logo.png') no-repeat center
	background-size 100% 

// Document setup
section
	position relative
	line-height 30px
	background gray
	padding (regular_margin / 2)
	margin regular_margin
	box-sizing border-box

	h1
		text-transform uppercase


// the blog has sections inside of it
#blog_content
	background transparent
	margin 0
	padding 0

	section
		// text becomes more difficult to read in really long lines
		max-width 900px

		margin-left auto
		margin-right auto
		border-left regular_margin solid transparent
		border-right regular_margin solid transparent
		background-clip padding-box

		padding regular_margin


		.post-info, .title
			margin 0
			padding regular_margin
			margin-left -(regular_margin)
			border-left regular_margin solid blue
			padding-bottom 0

		.post-info
			color lighten(dark_gray, 20%)
			font-size regular_font_size * 0.75
			padding-top 0

		.title
			margin-top -(regular_margin)

footer
	width 100%
	height footer_height
	font-size 1em
	background lighten(slate, 30%) url('../img/logo2.png') center bottom no-repeat
	background-size: 100px 100px

	p
		margin 0
		padding-top 5px
		color white
		font-size 1.4em
		text-align center

/* Animations and Responsive
-----------------------------------------------------------------------------*/ 
@import "adaptive"

//gallery
.gallery-icon, .gallery-item
	display inline-block

.gallery-item
	margin (regular_margin / 2)

.gallery
	line-height 0
	display flex
	justify-content center
	flex-flow row wrap

	br, .wp-caption-text
		display none

#links
	position: fixed
	bottom: 10px
	width: 100%
	padding 0
	padding-top: 10px
	list-style: none
	text-align: center
	z-index: 99999

	li
		display: inline
		padding: 0 5px

		label
			width: 12px
			height: 12px
			border-radius: 100%
			display: inline-block
			background-color: rgba(0, 0, 0, 0.6)
			cursor: pointer

		&.active label
			background-color: white
